# build with secure label support
ifeq ($(filter win.amd64,$(BUILD_TARGET).$(BUILD_TARGET_ARCH)),) # too much work with freetype and all that.
VBOX_WITH_SECURELABEL = 1
endif

# the main api
VBOX_WITH_MAIN = 1
# the SDL based GUI
VBOX_WITH_VBOXSDL = 1
# the basic frontend (w/o Main)
