DEFS.linux   = __LINUX__ _FILE_OFFSET_BITS=64
DEFS.netbsd  = __NETBSD__
DEFS.openbsd = __OPENBSD__
DEFS.os2     = __OS2__
DEFS.solaris = __SOLARIS__
DEFS.win     = __WIN__
DEFS.win.x86 = __WIN32__
DEFS.win.amd64 = __WIN64__
