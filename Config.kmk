#
# GCC stuff properties.
#
# These will be resolved on the first kmk invocation and passed on to recursive
# instances in the environment.
#q
# Note. If we add much more to here, we should seriously consider moving this to a
#       gcc configure script which we invoke automatically.
#
include $(PATH_KBUILD)/tools/$(VBOX_GCC_TOOL).kmk

ifndef VBOX_GCC_LIBGCC
 export VBOX_GCC_LIBGCC := $(shell $(TOOL_$(VBOX_GCC_TOOL)_CC) -print-libgcc-file-name)
endif

# HC compiler switch detction.
VBOX_GCC_CHECK_CC = $(shell \
   if $(TOOL_$(VBOX_GCC_TOOL)_CC) $(1) -S -o /dev/null -xc /dev/null > /dev/null 2>&1; \
   then echo "$(1)"; \
   else echo "$(2)"; fi; )
VBOX_GCC_CHECK_CXX = $(shell \
   if $(TOOL_$(VBOX_GCC_TOOL)_CXX) $(1) -S -o /dev/null -xc++ /dev/null > /dev/null 2>&1; \
   then echo "$(1)"; \
   else echo "$(2)"; fi; )
ifeq ($(origin VBOX_GCC_Wno-pointer-sign),undefined)
 export VBOX_GCC_Wno-pointer-sign := $(call VBOX_GCC_CHECK_CC,-Wno-pointer-sign,)
endif
ifeq ($(origin VBOX_GCC_Wno-variadic-macros),undefined)
 export VBOX_GCC_Wno-variadic-macros := $(call VBOX_GCC_CHECK_CXX,-Wno-variadic-macros,)
endif
ifeq ($(origin VBOX_GCC_Wno-invalid-offsetof),undefined)
 export VBOX_GCC_Wno-invalid-offsetof := $(call VBOX_GCC_CHECK_CXX,-Wno-invalid-offsetof,)
endif
ifeq ($(origin VBOX_GCC_fno-stack-protector),undefined)
 export VBOX_GCC_fno-stack-protector := $(call VBOX_GCC_CHECK_CC,-fno-stack-protector,)
endif

# 32-bit (GC) compiler switch detection.
VBOX_GCC32_CHECK_CXX = $(shell \
   if $(TOOL_$(VBOX_GCC32_TOOL)_CXX) $(1) -S -o /dev/null -xc++ /dev/null > /dev/null 2>&1; \
   then echo "$(1)"; \
   else echo "$(2)"; fi; )
ifneq ($(VBOX_GCC_TOOL),$(VBOX_GCC32_TOOL))
 include $(PATH_KBUILD)/tools/$(VBOX_GCC32_TOOL).kmk
 ifeq ($(origin VBOX_GCC32_Wno-variadic-macros),undefined)
  export VBOX_GCC32_Wno-variadic-macros := $(call VBOX_GCC32_CHECK_CXX,-Wno-variadic-macros,)
 endif
 ifndef VBOX_GCC32_LIBGCC
  export VBOX_GCC32_LIBGCC := $(shell $(TOOL_$(VBOX_GCC32_TOOL)_CC) -print-libgcc-file-name)
 endif
else
 VBOX_GCC32_Wno-variadic-macros ?= $(VBOX_GCC_Wno-variadic-macros)
 VBOX_GCC32_LIBGCC ?= $(VBOX_GCC_LIBGCC)
endif

