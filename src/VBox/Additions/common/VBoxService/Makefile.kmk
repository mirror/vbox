SUB_DEPTH = ../../../../..
include	$(KBUILD_PATH)/subheader.kmk

if "$(KBUILD_HOST)" != "os2" || defined(VBOX_WITH_OS2_ADDITIONS)
 PROGRAMS += VBoxService
endif

#
# VBoxService.exe
#
VBoxService_TEMPLATE      = VBOXGUESTR3EXE
VBoxService_DEFS          = VBOXSERVICE_TIMESYNC
VBoxService_DEFS.win     += _WIN32_WINNT=0x0501 _UNICODE UNICODE
VBoxService_DEFS.os2      = VBOX_WITH_HGCM VBOXSERVICE_CLIPBOARD
ifdef VBOX_WITH_GUEST_PROPS
 VBoxService_DEFS.win    += VBOX_WITH_GUEST_PROPS VBOXSERVICE_VMINFO
endif
VBoxService_SOURCES       = \
	VBoxService.cpp \
	VBoxServiceTimeSync.cpp
VBoxService_SOURCES.win   = \
	VBoxService-win.cpp \
	VBoxServiceVMInfo.cpp \
	VBoxServiceVMInfo-win.cpp
VBoxService_SOURCES.os2   = \
	VBoxService-os2.def \
	VBoxServiceClipboard-os2.cpp
VBoxService_LIBS          = \
	$(VBOX_LIB_IPRT_GUEST_R3) \
	$(VBOX_LIB_VBGL_R3) \
	$(VBOX_LIB_IPRT_GUEST_R3)
ifdef VBOX_WITH_GUEST_PROPS
 VBoxService_LIBS.win    += \
	Secur32.lib \
	WtsApi32.lib \
	Psapi.lib
endif

include	$(KBUILD_PATH)/subfooter.kmk

